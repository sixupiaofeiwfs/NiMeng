<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center">



    <LinearLayout
        android:id="@+id/pid0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="系统日期/时间"
            android:textSize="20dp"
            android:textStyle="bold"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/pid1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pid0"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击确定系统日期："
            android:layout_weight="1"
            android:textAlignment="center"
            />

        <DatePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/systemparam_datepicker1"
            android:visibility="gone"
            android:calendarViewShown="true"
            android:spinnersShown="true"
            android:layout_weight="3">
        </DatePicker>
        <TimePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/systemparam_timepicker1"
            android:layout_weight="3"
            android:visibility="gone">
        </TimePicker>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/systemparam_showtextview1"
            android:visibility="invisible"
            android:layout_weight="1">
        </TextView>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/pid1.5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pid1"
        android:layout_marginTop="40dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="其他设置"
            android:textSize="20dp"
            android:textStyle="bold"
            />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/pid2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pid1.5"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/text_huanxiang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="照明自动关闭（s）"
            android:textAlignment="center"/>

        <EditText
            android:id="@+id/huanxiang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number" />


        <TextView
            android:id="@+id/text_chaoxian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="使用超限报警？（常开）"
            android:textAlignment="center"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="启用" />


        <TextView
            android:id="@+id/text_pingbao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="是否启用屏保（s）"
            android:textAlignment="center"/>


        <EditText
            android:id="@+id/pingbao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="启用" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/pid3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pid2"
        android:layout_marginTop="40dp">


        <TextView
            android:id="@+id/text_dingshi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用定时功能"
            android:textSize="20dp"
            android:textStyle="bold"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="启用" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/pid4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pid3"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/set_dingshi1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击设置温度定时开启时间"
            android:layout_weight="3"
            android:textAlignment="center"
             />

        <DatePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/systemparam_datepicker2"
            android:layout_weight="2"
            android:spinnersShown="true"
            android:calendarViewShown="true"
            android:visibility="gone">
        </DatePicker>
        <TimePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:id="@+id/systemparam_timepicker2"
            android:visibility="gone">
        </TimePicker>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/systemparam_showtextview2"
            android:visibility="invisible">
        </TextView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/Bdingshi1"
            android:text="启用" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/pid5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pid4"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/set_dingshi2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击设置温度定时关闭时间"
            android:layout_weight="3"
            android:textAlignment="center"
            />

        <DatePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/systemparam_datepicker3"
            android:layout_weight="2"
            android:spinnersShown="true"
            android:calendarViewShown="true"
            android:visibility="gone">
        </DatePicker>
        <TimePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:id="@+id/systemparam_timepicker3"
            android:visibility="gone">
        </TimePicker>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/systemparam_showtextview3"
            android:visibility="invisible">
        </TextView>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/Bdingshi2"
            android:text="启用" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/pid6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pid5"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/set_dingshi3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击设置湿度定时开启时间"
            android:layout_weight="3"
            android:textAlignment="center"
            />
        <DatePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/systemparam_datepicker4"
            android:layout_weight="2"
            android:spinnersShown="true"
            android:calendarViewShown="true"
            android:visibility="gone">
        </DatePicker>
        <TimePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:id="@+id/systemparam_timepicker4"
            android:visibility="gone">
        </TimePicker>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/systemparam_showtextview4"
            android:visibility="invisible">
        </TextView>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/Bdingshi3"
            android:text="启用" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/pid7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pid6"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/set_dingshi4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击设置湿度定时关闭时间"
            android:layout_weight="3"
            android:textAlignment="center"
            />
        <DatePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/systemparam_datepicker5"
            android:layout_weight="2"
            android:spinnersShown="true"
            android:calendarViewShown="true"
            android:visibility="gone">
        </DatePicker>
        <TimePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:id="@+id/systemparam_timepicker5"
            android:visibility="gone">
        </TimePicker>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/systemparam_showtextview5"
            android:visibility="invisible">
        </TextView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/Bdingshi4"
            android:text="启用" />

    </LinearLayout>



</RelativeLayout>