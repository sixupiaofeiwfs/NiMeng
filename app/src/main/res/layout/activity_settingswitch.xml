<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/LinearLayout1"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/text_alerm"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:text="报警"
            android:textSize="25dp"
            android:gravity="center"
            />
        <Button
            android:id="@+id/btn_alerm"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/text_alerm"
            />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/LinearLayout2"
        android:layout_below="@id/LinearLayout1"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/text_voice"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:text="语音播报"
            android:textSize="25dp"
            android:gravity="center"
            />
        <Button
            android:id="@+id/btn_voice"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/text_voice"
            />

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/LinearLayout3"
        android:layout_below="@id/LinearLayout2"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/text_status"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:text="状态指示"
            android:textSize="25dp"
            android:gravity="center"
            />
        <Button
            android:id="@+id/btn_status"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/text_status"
            />

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/LinearLayout4"
        android:layout_below="@id/LinearLayout3"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/text_auto_capture"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:text="自动拍摄"
            android:textSize="25dp"
            android:gravity="center"
            />
        <Button
            android:id="@+id/btn_auto_capture"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/text_auto_capture"
            />

    </LinearLayout>



</RelativeLayout>